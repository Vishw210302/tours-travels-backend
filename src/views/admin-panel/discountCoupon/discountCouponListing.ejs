<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <style>
      table th,
      table td {
        white-space: normal;
        word-wrap: break-word;
        word-break: break-word;
      }
      table th.index,
      table td.index {
        width: 5%;
      }
      table th.name,
      table td.name {
        width: 20%;
      }
      table th.description,
      table td.description {
        width: 50%;
      }
      table th.action,
      table td.action {
        width: 10%;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <%- console.log("this and that", data) %>
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Promo Codes
                  </li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center mb-4"
                  >
                    <div>
                      <h4 style="margin: 0">All Discount Coupon</h4>
                    </div>
                    <div>
                      <a
                        class="btn btn-primary"
                        href="/admin/add-discount-Coupon"
                        >Add Discount Coupon</a
                      >
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th class="index">Index</th>
                          <th class="name">Discount Coupon</th>
                          <th class="name">Description</th>
                          <th class="name">Amount</th>
                          <th class="description">Status</th>
                          <th class="action">Action</th>
                          <th class="action">Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (data && data.length > 0) { %> <% for (var i = 0;
                        i < data.length; i++) { %>
                        <tr>
                          <td class="index py-1"><%= i + 1 %></td>
                          <td class="name">
                            <%= data[i].discountCouponName %>
                          </td>
                          <td class="name">
                            <%= data[i].promoCodeDescription %>
                          </td>
                          <td class="name"><%= data[i].discountAmount %></td>
                          <td class="description">
                            <div
                              class="<%= data[i].status === 'Active' ? 'badge badge-outline-success' : 'badge badge-outline-danger' %>"
                            >
                              <%= data[i].status %>
                            </div>
                          </td>
                          <td class="action">
                            <div class="form-check form-check-primary">
                              <input class="checkbox" type="checkbox"
                              data-id="<%= data[i]._id %>" <%= data[i].status
                              === 'Active' ? 'checked' : '' %>
                              onchange="toggleStatus(this)" />
                            </div>
                          </td>
                          <td>
                            <a
                              href="/admin/delete-discount-coupon/<%= data[i]._id %>"
                              style="text-decoration: none"
                            >
                              <i
                                class="fa-solid fa-trash text-danger"
                                style="font-size: 18px"
                              ></i>
                            </a>
                          </td>
                        </tr>
                        <% } %> <% } else { %>
                        <tr style="width: 100%">
                          <td style="text-align: center" colspan="7">
                            No discount coupon available.
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include("../partials/_footer.ejs") %>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
