  <style>
    .date-picker-container {
      max-width: 300px;
    }

    .selected-dates {
      margin-top: 10px;
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
    }

    .date-tag {
      background-color: #e0e0e0;
      padding: 5px 10px;
      border-radius: 5px;
      display: flex;
      align-items: center;
    }

    .date-tag button {
      background: none;
      border: none;
      cursor: pointer;
      margin-left: 5px;
      font-weight: bold;
    }

    .buttons {
      margin-top: 20px;
    }

    .select-container {
      position: relative;
      display: inline-block;
      width: 100%;
    }

    .select-container .form-control {
      cursor: pointer;
    }

    .form-control {
      background-color: #191c24 !important;
      color: white;
    }

    .select-container .options {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      border: 1px solid #ddd;
      background: white;
      display: none;
      z-index: 1000;
      max-height: 150px;
      overflow-y: auto;
    }

    .select-container .options div {
      padding: 10px;
      cursor: pointer;
    }

    .select-container .options div.selected {
      background: #007bff;
      color: white;
    }

    .day-count {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .add-day {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .main-box {
      padding: 20px;
      border: 2px solid black;
      margin-bottom: 20px;
    }

    .js-example-basic-multiple {
      width: 100%;
      background-color: white;
      color: black;
    }

    .main-class {
      gap: 10px;
    }

    .main-title-border {
      border-bottom: 1px solid white;
      width: fit-content;
    }
    .hotel-transfer {
      font-size: 12px;
    }
  </style>

