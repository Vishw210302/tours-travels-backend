<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>

  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Packages
                  </li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h4 class="card-title">All Packages Details</h4>
                    </div>
                    <div>
                      <a class="btn btn-primary" href="/admin/add-packages"
                        >Add Packages</a
                      >
                    </div>
                  </div>

                  <div class="mb-3">
                    <div class="m-0 p-0">
                      <p>Search By Package name</p>
                    </div>
                    <input
                      type="text"
                      id="searchInput"
                      class="form-control"
                      style="border-radius: 14px"
                      placeholder="Search Here..."
                      onkeyup="filterTable()"
                    />
                  </div>

                  <div class="table-responsive">
                    <table class="table table-striped" id="packagesTable">
                      <thead>
                        <tr>
                          <th>Index</th>
                          <th>Packages Name</th>
                          <th>Packages Image</th>
                          <th>Categories</th>
                          <th>Action</th>
                          <th>Add</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                          <td class="py-1"><%= i + 1 %></td>
                          <td><%= data[i].packageName %></td>
                          <td style="width: 30%" class="py-1">
                            <img
                              src="/uploads/packages-Image/<%= data[i].packageImage %>"
                              alt="image"
                              style="
                                width: 120px;
                                height: 120px;
                                border-radius: 120px;
                                object-fit: cover;
                                margin: 10px 0px;
                              "
                            />
                          </td>
                          <td><%= data[i].categories %></td>
                          <td>
                            <a
                              href=""
                              style="
                                margin-right: 1rem;
                                margin-left: 1rem;
                                text-decoration: none;
                              "
                            >
                              <i
                                class="fa-solid fa-pen-to-square text-primary"
                                style="font-size: 18px"
                              ></i>
                            </a>
                            <a
                              href="/admin/admin-delete-package/<%= data[i]._id %>"
                              style="text-decoration: none"
                            >
                              <i
                                class="fa-solid fa-trash text-danger"
                                style="font-size: 18px"
                              ></i>
                            </a>
                          </td>
                          <td>
                            <a
                              href="/admin/particularDomesticItenary/<%= data[i]._id %>"
                              class="badge badge-success"
                            >
                              <i class="fa-sharp fa-solid fa-plus"></i>
                            </a>
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include("../partials/_footer.ejs") %>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>

    <script>
      function filterTable() {
        const input = document
          .getElementById("searchInput")
          .value.toLowerCase();
        const table = document.getElementById("packagesTable");
        const rows = table.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {
          const packageName = rows[i]
            .getElementsByTagName("td")[1]
            .innerText.toLowerCase();

          if (packageName.includes(input)) {
            rows[i].style.display = "";
          } else {
            rows[i].style.display = "none";
          }
        }
      }
    </script>
  </body>
</html>
