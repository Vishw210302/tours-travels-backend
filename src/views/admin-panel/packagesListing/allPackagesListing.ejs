<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>

  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Packages
                  </li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h4 class="card-title">All Packages Details</h4>
                    </div>
                    <div>
                      <a class="btn btn-primary" href="/admin/add-packages"
                        >Add Packages</a
                      >
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Index</th>
                          <th>Packages Name</th>
                          <th>Packages Image</th>
                          <th>Categories</th>
                          <th>Action</th>
                          <th>Add</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                          <td class="py-1"><%= i + 1 %></td>
                          <td><%= data[i].packageName %></td>
                          <td style="width: 30%" class="py-1">
                            <img
                              src="/uploads/packages-Image/<%= data[i].packageImage %>"
                              alt="image"
                              style="
                                width: 85%;
                                height: 200px;
                                border-radius: 0;
                                object-fit: fill;
                              "
                            />
                          </td>
                          <td><%= data[i].categories %></td>
                          <td>
                            <a
                              href=""
                              style="
                                margin-right: 1rem;
                                margin-left: 1rem;
                                text-decoration: none;
                              "
                            >
                              <i
                                class="fa-solid fa-pen-to-square text-primary"
                                style="font-size: 18px"
                              ></i>
                            </a>
                            <a
                              href="/admin/admin-delete-package/<%= data[i]._id %>"
                              style="text-decoration: none"
                            >
                              <i
                                class="fa-solid fa-trash text-danger"
                                style="font-size: 18px"
                              ></i>
                            </a>
                          </td>
                          <td>
                            <a
                              href="/admin/particularDomesticItenary/<%= data[i]._id %>"
                              class="badge badge-success"
                            >
                              <i class="fa-sharp fa-solid fa-plus"></i>
                            </a>
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include("../partials/_footer.ejs") %>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
