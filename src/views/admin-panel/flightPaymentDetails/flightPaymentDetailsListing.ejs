<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap4.min.css"
    />
    <style>
      :root {
        --primary-color: #007bff;
        --secondary-color: #6c757d;
        --success-color: #28a745;
        --dark-text: #343a40;
        --dark-bg: #191c24;
        --dark-card-bg: #252a36;
        --dark-table-header: #2c3142;
      }

      body {
        background-color: var(--dark-bg);
        color: #e9ecef;
      }

      .container-scroller {
        background-color: var(--dark-bg);
      }

      .content-wrapper {
        padding: 1.5rem;
      }

      .page-header {
        background-color: #252a36;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 1.5rem;
        padding: 1.25rem;
        color: #e9ecef;
      }

      .card {
        background-color: var(--dark-card-bg);
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
      }

      .table-responsive {
        border-radius: 10px;
        overflow: hidden;
      }

      .table {
        color: #e9ecef;
      }

      .table thead {
        background-color: var(--dark-table-header);
      }

      .table thead th {
        color: #e9ecef;
        font-weight: 600;
        border: none;
        padding: 1rem;
        vertical-align: middle;
      }

      .table tbody tr {
        background-color: #252a36;
        transition: background-color 0.2s ease;
      }

      .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
      }

      .table tbody td {
        vertical-align: middle;
        padding: 1rem;
        border-color: #2c3142;
      }

      .status-badge {
        padding: 0.375rem 0.75rem;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
      }

      .status-completed {
        background-color: rgba(40, 167, 69, 0.15);
        color: #28a745;
      }

      .status-pending {
        background-color: rgba(255, 193, 7, 0.15);
        color: #ffc107;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      .dataTables_wrapper .dataTables_paginate .paginate_button {
        color: #e9ecef !important;
        background-color: transparent !important;
        border: 1px solid #2c3142 !important;
        margin: 0 0.25rem;
        border-radius: 4px;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background-color: rgba(0, 123, 255, 0.1) !important;
        color: #007bff !important;
      }

      .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background-color: #007bff !important;
        color: white !important;
        border-color: #007bff !important;
      }

      .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
        color: #6c757d !important;
        border-color: #2c3142 !important;
        cursor: not-allowed;
      }

      .dataTables_wrapper .dataTables_paginate .ellipsis {
        color: #6c757d;
        padding: 0.5rem 0.75rem;
      }

      .action-icons a {
        margin: 0 0.5rem;
        color: #6c757d;
        transition: color 0.3s ease;
      }

      .action-icons a:hover {
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <div>
                <div>
                  <h2 class="page-title mb-0">Flight Payment Details</h2>
                  <p class="mb-0 mt-2">
                    View and manage flight payment transactions
                  </p>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table
                        id="paymentTable"
                        class="table table-striped"
                        style="width: 100%"
                      >
                        <thead>
                          <tr>
                            <th>Sr. No.</th>
                            <th>Payment ID</th>
                            <th>Flight Rout</th>
                            <th>Passenger Name</th>
                            <th>Phone Number</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include("../partials/_footer.ejs") %>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="addPaymentModal"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div
          class="modal-content"
          style="background-color: #252a36; color: #e9ecef"
        >
          <div class="modal-header" style="border-bottom: 1px solid #2c3142">
            <h5 class="modal-title">Add New Payment</h5>
            <button
              type="button"
              class="close text-light"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form id="addPaymentForm" action="/admin/payment/add" method="POST">
            <div class="modal-body">
              <div class="form-group">
                <label>Flight Route</label>
                <input
                  type="text"
                  class="form-control bg-dark text-light"
                  name="flightRoute"
                  placeholder="Enter flight route"
                  required
                />
              </div>
              <div class="form-group">
                <label>Passenger Name</label>
                <input
                  type="text"
                  class="form-control bg-dark text-light"
                  name="passengerName"
                  placeholder="Enter passenger name"
                  required
                />
              </div>
              <div class="form-group">
                <label>Payment Amount</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text bg-dark text-light">â‚¹</span>
                  </div>
                  <input
                    type="number"
                    class="form-control bg-dark text-light"
                    name="paymentAmount"
                    placeholder="Enter amount"
                    required
                  />
                </div>
              </div>
              <div class="form-group">
                <label>Payment Status</label>
                <select
                  class="form-control bg-dark text-light"
                  name="paymentStatus"
                  required
                >
                  <option value="" class="bg-dark">Select Status</option>
                  <option value="Completed" class="bg-dark">Completed</option>
                  <option value="Pending" class="bg-dark">Pending</option>
                </select>
              </div>
            </div>
            <div class="modal-footer" style="border-top: 1px solid #2c3142">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Cancel
              </button>
              <button type="submit" class="btn btn-primary">Add Payment</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include("../partials/_script.ejs") %>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap4.min.js"></script>

    <script>
      $(document).ready(function () {
        $("#paymentTable").DataTable({
          processing: true,
          serverSide: true,
          responsive: true,
          pagingType: "full_numbers",
          pageLength: 10,
          ajax: {
            url: "/admin/flight-payment-details",
            type: "GET",
            data: function (d) {
              d.page = Math.ceil(d.start / d.length) + 1;
              d.limit = d.length;
              d.search = d.search.value;
            },
          },
          columns: [
            {
              data: "DT_RowIndex",
              name: "DT_RowIndex",
              orderable: false,
              searchable: false,
            },
            {
              data: "paymentId",
              render: function (data) {
                return `<span class="text-muted">${data}</span>`;
              },
            },
            {
              data: "flightRoute",
              render: function (data) {
                return `<span class="text-truncate">${data}</span>`;
              },
            },
            {
              data: "passengerName",
              render: function (data) {
                return `<span class="text-truncate">${data}</span>`;
              },
            },
            {
              data: "phoneNumber",
              render: function (data) {
                return `<span class="text-truncate">${data}</span>`;
              },
            },
            {
              data: "amount",
              render: function (data) {
                return `â‚¹ ${data.toFixed(2)}`;
              },
            },
            {
              data: "paymentDate",
              render: function (data) {
                return data;
              },
            },
            {
              data: "status",
              render: function (data) {
                const statusClass =
                  data.toLowerCase() === "succeeded"
                    ? "status-completed"
                    : "status-pending";
                return `<span class="badge status-badge ${statusClass}">${data}</span>`;
              },
            },
            {
              data: null,
              className: "action-icons text-center",
              render: function (data, type, row) {
                if (row.paymentId !== "N/A") {
                  return `
                    <a href="/admin/view/${row.paymentId}" title="View Details">
                        <i class="fas fa-eye"></i>
                    </a>
                `;
                } else {
                  return `
                    <span class="text-muted" title="No details available">
                        <i class="fas fa-eye-slash"></i>
                    </span>
                `;
                }
              },
            },
          ],
          language: {
            searchPlaceholder: "Search payments...",
            processing: "Loading payment details...",
            emptyTable: "No payment records found",
            paginate: {
              first: '<i class="fas fa-angle-double-left"></i>',
              previous: '<i class="fas fa-angle-left"></i>',
              next: '<i class="fas fa-angle-right"></i>',
              last: '<i class="fas fa-angle-double-right"></i>',
            },
          },
          drawCallback: function (settings) {
            var pagination = $(this)
              .closest(".dataTables_wrapper")
              .find(".dataTables_paginate");
            var pageCount = Math.ceil(
              settings._iRecordsTotal / settings._iDisplayLength
            );

            if (pageCount > 1) {
              pagination.show();
            } else {
              pagination.hide();
            }
          },
        });
      });
    </script>
  </body>
</html>
