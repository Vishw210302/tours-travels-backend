<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <style>
      .table td {
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
      }
    </style>
  </head>

  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    All Branch
                  </li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h4 class="card-title">All Branch Details</h4>
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table
                      class="table table-striped"
                      style="table-layout: fixed; width: 100%"
                    >
                      <thead>
                        <tr>
                          <th>Index</th>
                          <th>Branch Name</th>
                          <th>Branch Number</th>
                          <th>Location</th>
                          <th style="width: 30%">Map-Url</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i = 0; i < data.length; i++) { %>
                        <tr>
                          <td class="py-1"><%= i + 1 %></td>
                          <td><%= data[i].branchName %></td>
                          <td><%= data[i].branchNumber %></td>
                          <td><%= data[i].branchLocation %></td>
                          <td
                            style="
                              width: 30%;
                              word-wrap: break-word;
                              overflow-wrap: break-word;
                              white-space: normal;
                            "
                          >
                            <%= data[i].mapUrl %>
                          </td>
                          <td>
                            <a
                              href="/admin/delete-branch-details/<%= data[i]._id %>"
                              class="badge badge-danger"
                              >Delete</a
                            >
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <%- include("../partials/_footer.ejs") %>
          </div>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
