<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin/allBranchNameListing">Branch</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Add Branch
                  </li>
                </ol>
              </nav>
            </div>
            <div>
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add Branch</h4>
                  <form
                    class="forms-sample"
                    method="POST"
                    action="/admin/add-branch-details"
                  >
                    <input
                      type="hidden"
                      class="form-control"
                      id="branchId"
                      name="branchId"
                      placeholder="Branch Name"
                      value="<%= branchId %>"
                    />
                    <div class="form-group">
                      <label for="branchName">Branch Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="branchName"
                        name="branchName"
                        placeholder="Branch Name"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label for="branchNumber">Branch Number</label>
                      <input
                        type="text"
                        class="form-control"
                        id="branchNumber"
                        name="branchNumber"
                        placeholder="Branch Number"
                        required
                      />
                    </div>

                    <div class="form-group">
                      <label for="branchLocation">Location</label>
                      <input
                        type="text"
                        class="form-control"
                        id="branchLocation"
                        name="branchLocation"
                        placeholder="Branch Location"
                        required
                      />
                    </div>

                    <div class="form-group">
                      <label for="mapUrl">Map URL</label>
                      <input
                        type="url"
                        class="form-control"
                        id="mapUrl"
                        name="mapUrl"
                        placeholder="Map URL"
                      />
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">
                      Submit
                    </button>
                    <a class="btn btn-dark" href="/admin/allBranchLocation">
                      Cancel
                    </a>
                  </form>
                </div>
              </div>
            </div>

            <%- include("../partials/_footer.ejs") %>
          </div>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
