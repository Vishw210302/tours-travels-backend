<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>

  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div
            class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg"
          >
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Login</h3>
                <form method="POST" action="/post-login">
                  <div class="form-group">
                    <label>Email</label>
                    <input
                      type="text"
                      name="email"
                      class="form-control p_input"
                    />
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input
                      type="text"
                      name="password"
                      class="form-control p_input"
                    />
                  </div>
                  <div
                    class="form-group d-flex align-items-end justify-content-end"
                  >
                    <a href="/register" class="forgot-pass"
                      >Go to register page</a
                    >
                  </div>
                  <div class="text-center">
                    <button
                      type="submit"
                      class="btn btn-primary btn-block enter-btn"
                    >
                      Login
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
