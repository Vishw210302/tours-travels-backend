<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>

  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    <a href="/admin/rolesListing">Roles</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Add Roles
                  </li>
                </ol>
              </nav>
            </div>
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add Roles</h4>
                  <form
                    class="forms-sample"
                    action="/admin/post-roles-name"
                    method="POST"
                  >
                    <div class="form-group">
                      <label for="exampleInputName1">Role Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="roleName"
                        id="exampleInputName1"
                        placeholder="Role Name"
                      />
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Role Description</label>
                      <input
                        type="text"
                        class="form-control"
                        name="roleDescription"
                        id="exampleInputName1"
                        placeholder="Role Description"
                      />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">
                      Submit
                    </button>
                    <a class="btn btn-dark" href="/admin/rolesListing">
                      Cancel
                    </a>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <%- include("../partials/_footer.ejs") %>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
