<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body>
    <div class="container-scroller">
      <%- include("../partials/_sidebar.ejs") %>
      <div class="container-fluid page-body-wrapper">
        <%- include("../partials/_navbar.ejs") %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Basic Tables</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/admin/">Branch Location</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Add Branch Location
                  </li>
                </ol>
              </nav>
            </div>
            <div>
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add Promo Code</h4>
                  <form
                    class="forms-sample"
                    method="POST"
                    action="/admin/post-promoCodes"
                  >
                    <div class="form-group">
                      <label for="promoCode">Promo Code Name</label>
                      <input
                        type="text"
                        name="promoCode"
                        class="form-control"
                        id="promoCode"
                        placeholder="Promo Code Name"
                      />
                    </div>
                    <div class="form-group">
                      <label for="discountAmount">Discount Amount</label>
                      <input
                        type="text"
                        name="discountAmount"
                        class="form-control"
                        id="discountAmount"
                        placeholder="Discount Amount"
                      />
                    </div>
                    <input type="hidden" name="status" value="inactive" />
                    <button type="submit" class="btn btn-primary mr-2">
                      Submit
                    </button>
                    <a class="btn btn-dark" href="/admin/promoListing"
                      >Cancel</a
                    >
                  </form>
                </div>
              </div>
            </div>
            <%- include("../partials/_footer.ejs") %>
          </div>
        </div>
      </div>
    </div>
    <%- include("../partials/_script.ejs") %>
  </body>
</html>
